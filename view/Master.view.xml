<mvc:View controllerName="com.sap.open.offline.view.Master" displayBlock="true" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page id="page" title="{i18n>masterTitle}">
		<headerContent>
			<core:Icon id="masterIcon" src="sap-icon://alert" visible="{device>/isOffline}"></core:Icon>
		</headerContent>
		<subHeader>
			<Bar id="searchBar">
				<contentMiddle>
					<SearchField id="searchField" placeholder="{i18n>masterSearchPlaceholder}" search="onSearch" showRefreshButton="{device>/isNoTouch}"
						tooltip="{i18n>masterSearchTooltip}" width="100%"></SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<List growing="true" growingScrollToLoad="true" id="list" items="{/Products}" mode="{device>/listMode}"
				noDataText="{i18n>masterListNoDataText}" select="onSelect">
				<items>
					<ObjectListItem number="{Price}" numberUnit="{ID}" press="onSelect" title="{Name}" type="{device>/listItemType}"></ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar>
				<content>
					<Button icon="sap-icon://refresh" press="refreshData"></Button>
					<ToolbarSpacer/>
					<Button icon="sap-icon://add" press="addItem"></Button>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>