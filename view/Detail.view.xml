<mvc:View controllerName="com.sap.open.offline.view.Detail" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page class="sapUiFioriObjectPage" id="detailPage" navButtonPress="onNavBack" showNavButton="{device>/isPhone}" title="{i18n>detailTitle}">
		<headerContent>
			<core:Icon id="detailIcon" src="sap-icon://alert"
				visible="{parts:[{path:'device>/isOffline'}, {path:'device>/isPhone'}], formatter:'.onlineIconVisible'}"></core:Icon>
		</headerContent>
		<content></content>
		<footer>
			<Toolbar id="detailToolbar">
				<content>
					<Button icon="sap-icon://sys-cancel" id="cancelButton" press="cancelEdit"></Button>
					<ToolbarSpacer id="toolbarSpacer"></ToolbarSpacer>
					<Button icon="sap-icon://save" id="saveButton" press="saveChanges"></Button>
					<Button icon="sap-icon://delete" id="deleteButton" press="deleteItem"></Button>
					<Button icon="sap-icon://edit" id="editButton" press="editItem"></Button>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>