<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ActionSheet showCancelButton="true" placement="Top">
		<buttons>
			<Button
				icon="sap-icon://sort"
				text= "{i18n>xbut.sort}"
				press="onSortPressed" 
				id="sortButton" />
			<Button
				icon= "sap-icon://filter"
				text= "{i18n>xbut.filter}"
				press="onFilterPressed"
				id="filterButton" />				
			<Button
				icon= "sap-icon://group-2"
				text= "{i18n>xbut.group}"
				press="onGroupPressed"
				id="groupButton" />
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>