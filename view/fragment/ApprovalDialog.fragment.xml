<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog title="{approvalProperties>/approvalTitle}" class="nwEpmRefappsExtPoApvApprovalDialogLayout">
		<content>
			<l:VerticalLayout width="100%">
				<Text text="{approvalProperties>/approvalText}" class="nwEpmRefappsExtPoApvTextLayout" />
				<TextArea value ="{approvalProperties>/approvalNote}" rows="5" width="100%" placeholder="{i18n>xfld.approvalNote}" class="nwEpmRefappsExtPoApvTextAreaLayout" />
			</l:VerticalLayout>
		</content>	
		<beginButton>
			<Button text="{i18n>xbut.buttonOK}" press="onConfirmAction" />
		</beginButton>
		<endButton>
			<Button text="{i18n>xbut.buttonCancel}" press="onCancelAction" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>